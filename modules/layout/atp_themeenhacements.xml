<?xml version="1.0"?>
<!--

-->
<layout version="0.1.0">

  <default>

    <reference name="root">
      <action method="addBodyClass"><classname>no-js</classname></action>
    </reference>

    <reference name="top.links">
      <action method="removeLinkByUrl"><url helper="customer/getAccountUrl"/></action>
      <action method="removeLinkBlock"><blockName>wishlist_link</blockName></action>
      <remove name="checkout_cart_link" />

      <block type="cms/block" name="cms_top_links">
        <action method="setBlockId"><block_id>top-links</block_id></action>
      </block>
      <action method="addLinkBlock"><blockName>cms_top_links</blockName></action>

      <action method="addLink" translate="label title" module="contacts" ifconfig="contacts/contacts/enabled"><label>Contact Us</label><url>contacts</url><title>Contact Us</title><prepare>true</prepare></action>
    </reference>
  </default>

  <store_default>
    <reference name="root">
      <action method="addBodyClass"><classname>store-default</classname></action>
    </reference>
  </store_default>

  <store_default_ceramics>
    <reference name="root">
      <action method="addBodyClass"><classname>store-default-ceramics</classname></action>
    </reference>
  </store_default_ceramics>

  <customer_logged_in>
    <reference name="top.links">
      <action method="removeLinkByUrl"><url helper="customer/getLogoutUrl"/></action>
    </reference>
  </customer_logged_in>

  <customer_logged_out>
    <reference name="top.links">
      <action method="removeLinkByUrl"><url helper="customer/getLoginUrl"/></action>
    </reference>
  </customer_logged_out>

</layout>
